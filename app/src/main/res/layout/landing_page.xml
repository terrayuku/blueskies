<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bntDesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="design_best_life"
            android:text="Design Your Best Life" />

        <Button
            android:id="@+id/btnCompleteProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bntDesign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="completeProfile"
            android:text="Complete Profile" />

        <Button
            android:id="@+id/btnBestLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCompleteProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="bestLife"
            android:text="Way to your best life" />

        <Button
            android:id="@+id/btnComm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnBestLife"
            android:layout_marginTop="37dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="comm"
            android:text="Communication" />

        <Button
            android:id="@+id/btnReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnComm"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="reward"
            android:text="Rewards and Incentives" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</LinearLayout>